SUBDIRS = ../../ThirdParty bdtUtil bdtCore
.PHONY: $(SUBDIRS)

bdtUtil: ../../ThirdParty
bdtCore: bdtUtil

all install:: $(SUBDIRS)

$(SUBDIRS):
	@echo "making install in $@"
	@$(MAKE) install --directory=$@

clean::
	@for subdir in $(SUBDIRS); \
        do \
            if test -d $$subdir ; \
            then \
                echo "making $@ in $$subdir"; \
                ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
            fi; \
        done

